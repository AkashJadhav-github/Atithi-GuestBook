<h1>Atithi</h1>

<style>
  h1 {
    background-color: orange;
    padding: 5%;
    font-family: "Noto Sans CJK SC Bold";
  }
  h2 {
    background-color: #CCCCCC;
    padding:3%;
    font-family: FreeSans;
  }
</style>

<% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
<% end %>

<% if flash[:errors] %>
    <div class="row">
      <% flash[:errors].each do |e| %>
          <p class="text-danger"><%= e %></p>
      <% end %>
    </div>
<% end %>

<div class="row">

  <div id="registration" class="col-md-6">
    <h2> Register </h2>
    <%= form_for @receptionist do |f| %>

        <div class="form-group">
          <%= f.label :name %><br>
          <%= f.text_field :name, placeholder: "Enter a name", title: "enter only alphabets" %>
        </div>

        <div class="form-group">
          <%= f.label :email_id %><br>
          <%= f.email_field :email_id, placeholder: "Enter email id", title: "Enter email in this format: ex- character@character.domian" %>
        </div>

        <div class="form-group">
          <%= f.label :password %><br>
          <%= f.password_field :password, placeholder: "Enter password", title: "Enter new password" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %><br>
          <%= f.password_field :password_confirmation, placeholder: "Enter same password", title: "Re-enter new password" %>
        </div>
        <br>

        <%= f.submit %>

    <% end %>
  </div>

  <div id="login" class="col-md-6">
    <h2> Login </h2>
    <%= form_tag sessions_path do %>
        <div class="form-group">
          <%= label_tag :email_id %><br>
          <%= email_field_tag :email_id %>
        </div>
        <div class="form-group">
          <%= label_tag :password %><br>
          <%= password_field_tag :password %>
        </div>
        <%= submit_tag "Log In" %>
    <% end %>
  </div>

</div>


